@using KonciergeUI.Translations.Services
@inject ILocalizationService L
@inject IAppVersionProvider VersionProvider

<MudDialog ContentClass="border-none pa-0" Style="height: 400px; width: 400px;">
    @*
    <TitleContent>
        <MudText Typo="Typo.h6">@L.Navigation["AppName"]</MudText>
    </TitleContent>
    *@
    <DialogContent>
        <MudStack AlignItems="AlignItems.Center">
            <MudContainer >
                <MudStack AlignItems="AlignItems.Center">
                    <MudIcon Icon="@KonciergeIcons.Filled.Logo" Style="font-size: 10rem"/>
                    <MudText Align="Align.Center">@L.Global["info_description"]</MudText>
                </MudStack>
            </MudContainer>
            <MudStack AlignItems="AlignItems.Start">
                <MudContainer Style="background-color: rgba(0,0,0,0.1)" Class="rounded-lg ma-4" >
                    <MudStack AlignItems="AlignItems.Center" Row>
                        <MudIcon Icon="@KonciergeIcons.Color.Ananbelle" Style="font-size: 5rem"/>
                        <MudStack>
                            <MudText Style="font-weight: bold">@L.Global["info_version"] @VersionProvider.DisplayVersion</MudText>
                            <MudText>@L.Global["info_build"] @VersionProvider.BuildVersion</MudText>
                            <MudText>@L.Global["info_channel"] <MudText Inline="true" Color="Color.Primary">main</MudText></MudText>
                        </MudStack>
                    </MudStack>
                </MudContainer>

            </MudStack>

        </MudStack>
    </DialogContent>
    @*
    <DialogActions>
        <MudButton OnClick="Cancel">Close</MudButton>
    </DialogActions>
    *@
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    

    
    
    protected override async Task OnInitializedAsync()
    {
      
    }
    
    
    
   
    
    private void Cancel() => MudDialog.Cancel();
}