@using KonciergeUi.Client.Shared
@using KonciergeUI.Models.Forwarding
@using KonciergeUI.Translations.Services
@inject ILocalizationService L
<MudCard  Outlined="true">
    <MudStack>
        <MudText Style="font-family: monospace;" Typo="Typo.body2" >@L.Resources["resource"]</MudText>

        <MudStack AlignItems="AlignItems.Center"  Row>
            @if (_kind == Enums.ResourceType.Pod){
                <MudIcon Icon="@KonciergeIcons.Outlined.Pod" Size="Size.Small" Color="Color.Primary" />
            }
            else
            {
                <MudIcon Icon="@KonciergeIcons.Outlined.Service" Size="Size.Small" Color="Color.Primary" />

            }
            <MudText Style="font-family: monospace;" Typo="Typo.body1">@_resourceName</MudText>
        </MudStack>
        <MudText Style="font-family: monospace;" Typo="Typo.body2">@_namespace</MudText>

    </MudStack>
</MudCard>
@code {
    
    [Parameter]
    public Enums.ResourceType _kind { get; set; }
    [Parameter]
    public string _namespace { get; set; } 
    [Parameter]
    public string _resourceName { get; set; } 
    
}