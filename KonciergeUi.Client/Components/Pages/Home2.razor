@page "/resources"
@using KonciergeUi.Client.Components.Layout.FormFields
@using KonciergeUi.Client.State
@using KonciergeUI.Models.Kube
@inject UiState UiState

<MudContainer MaxWidth="MaxWidth.Large" Class="ma-4">
    <MudStack >
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">            
            <!-- FIXED: Add Label + Variant -->
            <ClusterSelect _onClusterSelection="OnClusterSelection"  />
            @if(selectedCluster is not null){
            <MudText>Selected: @selectedCluster.Name</MudText>
            }
        </MudStack>
            
        </MudStack>

</MudContainer>

@code {


    public ClusterConnectionInfo selectedCluster { get; set; }



    private async Task OnClusterSelection(ClusterConnectionInfo? sel)
    {

        selectedCluster = sel;

    
    }



}
